extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data Dokter
			small menu for editing doctor data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Lainnya  
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Dokter
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/pasien/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Nama Pasien
									input(type='text',value="#{data.nama_pasien}",name='nama_pasien',placeholder='Masukkan Nama', autofocus).form-control
								.form-group
									label
										| Gender
									input(type='text',value="#{ (jenis_kelamin == undefined) ? data.jenis_kelamin : jenis_kelamin }",name='jenis_kelamin',placeholder='Masukkan Gender').form-control
								.form-group
									label
										| Ruangan
									input(type='text',value="#{ (ruangan == undefined) ? data.ruangan : ruangan }",name='ruangan',placeholder='Masukkan Ruangan').form-control
								.form-group
									label
										| Tanggal Masuk
									input(type='text',value="#{ (tgl_masuk == undefined) ? data.tgl_masuk : tgl_masuk }",name='tgl_masuk',placeholder='Masukkan Tanggal Masuk').form-control
								.form-group
									label
										| Alamat
									input(type='text',value="#{ (alamat == undefined) ? data.alamat : alamat }",name='alamat',placeholder='Masukkan Tanggal Masuk').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/pasien').btn.btn-primary.pull-right
									| Back